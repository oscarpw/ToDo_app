<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <%= form_with(model: @todo, local: true) do |f| %>
                     <h4><%= f.label :title, "Description: " %></h4>
                     <%= f.text_area :description %>
                    <h4> <%= f.label :estado, "Completed? " %> <%= f.check_box :completed%></h4>
                     <%= f.submit "Save", class:'btn btn-primary' %>
                     <%= link_to 'Back', todos_path , class:'btn btn-danger' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
